{
  "name": "bookit-booking-system",
  "version": "1.0.0",
  "description": "WordPress Booking System Plugin",
  "scripts": {
    "wp-env": "wp-env",
    "wp-env:start": "wp-env start",
    "wp-env:stop": "wp-env stop",
    "wp-env:restart": "wp-env stop && wp-env start",
    "wp-env:destroy": "wp-env destroy",
    "test": "wp-env run tests-wordpress bash -c \"cd /var/www/html/wp-content/plugins/bookit-booking-system && vendor/bin/phpunit\"",
    "test:watch": "npm run test -- --watch",
    "test:verbose": "wp-env run tests-wordpress bash -c \"cd /var/www/html/wp-content/plugins/bookit-booking-system && vendor/bin/phpunit --verbose\"",
    "test:coverage": "wp-env run tests-wordpress bash -c \"cd /var/www/html/wp-content/plugins/bookit-booking-system && vendor/bin/phpunit --coverage-html coverage\""
  },
  "keywords": ["wordpress", "plugin", "booking"],
  "author": "Liron",
  "license": "GPL-2.0-or-later"
}
